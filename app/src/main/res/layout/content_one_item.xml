<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


    <TextView
        android:id="@+id/item_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:text="Time"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/item_list_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_list_time"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/item_list_time"
        android:layout_toRightOf="@+id/item_list_time"
        android:text="From address"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/item_list_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_list_repeat"
        android:layout_alignLeft="@+id/item_list_from"
        android:layout_alignStart="@+id/item_list_from"
        android:text="To address"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <Switch
        android:id="@+id/item_list_alarm_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/item_list_from"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:focusable="false"
        />

    <TextView
        android:id="@+id/item_list_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_list_time"
        android:layout_alignStart="@+id/item_list_time"
        android:layout_below="@+id/item_list_time"
        android:text="repeat"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

</RelativeLayout>