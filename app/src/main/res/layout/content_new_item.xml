<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context=".frontend.main.activities.NewItemActivity"
                tools:showIn="@layout/activity_new_item">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_item_hint"
        android:layout_marginBottom="5dp"
        android:textAppearance="?android:textAppearanceSmall"
        android:textStyle="italic"
        android:id="@+id/new_item_hint"/>

    <EditText
        android:id="@+id/new_item_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/new_item_from"
        android:inputType="text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/new_item_hint"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <EditText
        android:id="@+id/new_item_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/new_item_from"
        android:hint="@string/new_item_to"
        android:inputType="text"
        android:textAppearance="?android:attr/textAppearanceLarge"/>


    <TextView
        android:id="@+id/new_item_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/new_item_to"
        android:layout_marginTop="5dp"
        android:text="@string/new_item_alarm"
        android:textAppearance="?android:attr/textAppearanceLarge"/>


    <TextView
        android:id="@+id/new_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/new_item_alarm"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/new_item_alarm"
        android:layout_toRightOf="@+id/new_item_alarm"
        android:clickable="true"
        android:onClick="showTimePickerDialog"
        android:text="@string/new_item_null_time"
        android:textAppearance="?android:attr/textAppearanceLarge"/>


</RelativeLayout>



